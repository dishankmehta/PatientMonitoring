<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:cardview="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/pasttitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Past Data"
            android:textSize="25sp"
            />

        <LinearLayout
            android:id="@+id/tab1linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pasttitle1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/pcardviewnew"
                android:layout_width="350dp"
                android:layout_height="200dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginTop="20dp"
                cardview:cardElevation="6dp"
                cardview:cardUseCompatPadding="true"
                >

                <TextView
                    android:id="@+id/medissue1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Medical Issues:"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/issue1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="Issues:"
                    android:textSize="20sp"/>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/pcardviewnew1"
                android:layout_width="350dp"
                android:layout_height="200dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginTop="20dp"
                cardview:cardElevation="6dp"
                cardview:cardUseCompatPadding="true"
                >

                <TextView
                    android:id="@+id/meddata1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ongoing medicines:"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/medi1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="Medicines:"
                    android:textSize="20sp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pcardviewnew2"
                android:layout_width="350dp"
                android:layout_height="200dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginTop="20dp"
                cardview:cardElevation="6dp"
                cardview:cardUseCompatPadding="true"
                >

                <TextView
                    android:id="@+id/recentdata1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Recent Problems:"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/prob1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="Problem:"
                    android:textSize="20sp"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
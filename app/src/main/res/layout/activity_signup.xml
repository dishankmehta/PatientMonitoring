<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:background="#3F51B5">


        <TextView
            android:id="@+id/regtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:text="Patient Registration From"
            android:textColor="#FFFFFF"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/signup_id"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:hint="Patient Id"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                android:layout_marginTop="30dp"/>


            <EditText
                android:id="@+id/signup_fn"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="First Name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                 />


            <EditText
                android:id="@+id/signup_ln"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="Last Name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                 />

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                 />


            <EditText
                android:id="@+id/signup_password"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                 />


            <EditText
                android:id="@+id/signup_confirm_password"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                 />

            <EditText
                android:id="@+id/signup_dob"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="Date of Birth"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                 />

            <EditText
                android:id="@+id/signup_contactno"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="Contact No."
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                 />


            <EditText
                android:id="@+id/signup_medissue"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="Medical Issues"
                android:maxLines="6"
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                />

            <EditText
                android:id="@+id/signup_curmedi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="Current Medicines"
                android:maxLines="6"
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                />

            <EditText
                android:id="@+id/signup_curissue"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:hint="Current Issues"
                android:maxLines="6"
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                android:textColor="#505050"
                android:textSize="25dp"
                />


            <Button
                android:id="@+id/signup_btn"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="#E8E8E8"
                android:text="Register"
                android:textColor="#3F51B5"
                android:textSize="20dp"
                android:textStyle="bold"
                 />
        </LinearLayout>





</android.support.design.widget.CoordinatorLayout>
</ScrollView>
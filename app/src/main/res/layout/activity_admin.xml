<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5">

    <Button
        android:id="@+id/add_doc"
        android:background="#E8E8E8"
        android:layout_marginTop="40dp"
        android:focusable="true"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Add Doctor"
        android:textColor="#FF6666"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/rmv_doc"
        android:background="#E8E8E8"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Remove Doctor"
        android:textColor="#FF6666"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/add_doc"
        />

    <Button
        android:id="@+id/add_pat"
        android:background="#E8E8E8"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_below="@+id/rmv_doc"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Add patient"
        android:textColor="#FF6666"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/rmv_pat"
        android:background="#E8E8E8"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Remove Patient"
        android:textColor="#FF6666"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/add_pat"
        />

</RelativeLayout>

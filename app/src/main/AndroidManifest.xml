            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.DSIGNUP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminFiles.AdminMain"
            android:label="PatientMonitoring"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.ADMINMAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminFiles.AdminPatientAdd"
            android:label="PatientMonitoring"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.ADMINPATEINTADD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>



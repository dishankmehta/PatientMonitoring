            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.DOCTORNAVIGATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavigationDrawer.PatientNavigation"
            android:label="PatientMonitoring"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.PATIENTNAVIGATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
